{
  "title": "Services Overview",
  "panels": [
    {
      "title": "Service Availability",
      "type": "stat",
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Request Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "{{instance}}",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Error Rate (5xx)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (instance)",
          "legendFormat": "{{instance}}",
          "refId": "C"
        }
      ]
    },
    {
      "title": "Latency (p95)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, instance))",
          "legendFormat": "{{instance}}",
          "refId": "D"
        }
      ]
    }
  ],
  "schemaVersion": 34,
  "version": 1
}
