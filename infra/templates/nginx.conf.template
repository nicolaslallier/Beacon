user  nginx;
worker_processes  auto;

error_log  /dev/stderr warn;
pid        /var/run/nginx.pid;

# Main events block

events {
    worker_connections 1024;
}

stream {
    # Docker DNS resolver for dynamic upstream resolution
    resolver 127.0.0.11 valid=30s ipv6=off;

    # Stream logging format and access log
    log_format stream_main '$remote_addr [$time_local] '
                           '$protocol $status $bytes_sent $bytes_received '
                           '$session_time "$upstream_addr" '
                           '"$upstream_bytes_sent" "$upstream_bytes_received" "$upstream_connect_time"';
    access_log /dev/stdout stream_main;

    # VectorDB (PostgreSQL) TCP proxy
    upstream vectordb_tcp_upstream {
        server ${UPSTREAM_VECTORDB_HOST}:${UPSTREAM_VECTORDB_PORT};
    }

    server {
        listen 5432;
        proxy_pass vectordb_tcp_upstream;
        proxy_timeout 300s;
        proxy_connect_timeout 10s;
    }
}

http {
    include       mime.types;
    default_type  application/octet-stream;

    # Docker DNS resolver for dynamic upstream resolution
    resolver 127.0.0.11 valid=30s ipv6=off;

    log_format main '$remote_addr - $remote_user [$time_local] "$request" $status $body_bytes_sent $request_time "$http_referer" "$http_user_agent" "$http_x_forwarded_for" $upstream_addr $upstream_response_time';
    access_log /dev/stdout main;

    # Compression
    gzip ${GZIP_ENABLED};
    gzip_types application/json application/javascript text/css text/plain;

    # Set maximum client body size
    client_max_body_size ${MAX_BODY_SIZE};

    # Increase hash sizes for proxy headers (needed with many upstreams)
    proxy_headers_hash_max_size 1024;
    proxy_headers_hash_bucket_size 128;

    server_tokens off;

    # Map for API upstream
