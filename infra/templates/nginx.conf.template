    # ===========================================
    # HTTP to HTTPS redirect (when SSL enabled)
    # ===========================================
    server {
        listen 80 default_server;
        server_name _;

        # Health endpoint (always available on HTTP)
        location = /healthz {
            return 200 'OK\n';
            add_header Content-Type text/plain;
        }

        # ACME challenge for Let's Encrypt
        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }

        # Redirect all other HTTP traffic to HTTPS
        location / {
            return 301 https://$host$request_uri;
        }
    }

    # ===========================================
    # Beacon Library HTTPS server block
    # ===========================================
    server {
        listen 443 ssl;
        http2 on;
        server_name beacon-library.famillelallier.net;

        # SSL certificates
        ssl_certificate ${SSL_CERT_PATH};
        ssl_certificate_key ${SSL_KEY_PATH};
        include /etc/nginx/conf.d/ssl.conf;

        # Error page
        error_page 502 504 /502.html;
        location = /502.html {
            root /usr/share/nginx/html;
            internal;
        }

        # Health endpoint
        location = /healthz {
            return 200 'OK\n';
            add_header Content-Type text/plain;
        }

        # OAuth2 proxy endpoints
        location /oauth2/ {
            include /etc/nginx/conf.d/proxy_headers.conf;
            proxy_pass ${DOLLAR}beacon_gateway_upstream;
            proxy_buffering off;
            proxy_redirect off;
            
            # Large buffer sizes for OAuth2 tokens (JWT can be large)
            proxy_buffer_size 128k;
            proxy_buffers 4 256k;
            proxy_busy_buffers_size 256k;
        }

        # API gateway entry point
        location /api/ {
            auth_request /oauth2/auth;
            error_page 401 = /oauth2/sign_in;

            include /etc/nginx/conf.d/proxy_headers.conf;
            proxy_pass ${DOLLAR}beacon_gateway_upstream;
            proxy_buffering off;
            proxy_redirect off;
        }

        # MCP SSE endpoint - must use HTTP/1.1 for Server-Sent Events
        location /api/mcp/sse {
            auth_request /oauth2/auth;
            error_page 401 = /oauth2/sign_in;

            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Port $server_port;
            
            proxy_pass ${DOLLAR}beacon_gateway_upstream;
            
            # Critical SSE settings
            proxy_http_version 1.1;
            proxy_set_header Connection '';
            proxy_buffering off;
            proxy_cache off;
            
            # Long timeout for SSE connections
            proxy_read_timeout 86400s;
            proxy_send_timeout 86400s;
            
            # Chunked transfer encoding support
            chunked_transfer_encoding on;
        }

        # Beacon Library proxy - using variable for runtime DNS resolution
        location / {
            auth_request /oauth2/auth;
            error_page 401 = /oauth2/sign_in;

            # Standard proxy headers (NOT including proxy_headers.conf to avoid Connection override)
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Port $server_port;
            
            proxy_pass ${DOLLAR}beacon_library_upstream;
            
            # Beacon Library-specific proxy settings
            proxy_buffering off;
            proxy_redirect off;
            proxy_cache_bypass $http_upgrade;
            
            # Extended timeouts for WebSocket connections
            proxy_read_timeout 86400s;
            proxy_send_timeout 86400s;
            proxy_connect_timeout 75s;
            
            # WebSocket support for Vite HMR (MUST come after other proxy_set_header directives)
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
        }
    }

